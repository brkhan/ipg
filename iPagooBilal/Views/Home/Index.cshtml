@model iPagooBilal.Models.BookModel
@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Submit", "Home", FormMethod.Post))
{
    <fieldset>
        <div class="jumbotron">
            <h1>My Library</h1>
            @Html.DropDownListFor(a => a.SelectedOption, Model.SearchOptions, "Select search option")
            -
            @Html.TextBoxFor(a => a.SearchedText)
            -
            <input type="submit" value="Search" />
        </div>
    </fieldset>
}
<div class="results">
    @if (Model.SearchedText != null)
    {
        <label>You searched for @Model.SearchedText</label>
        <p></p>
        <label>Total books found : @Model.Books.Count</label>
    }
    <p>
        <table CELLPADDING="6" CELLSPACING="6" WIDTH="600">
            <tr>
                <th>Genre    </th>
                <th>ISBN     </th>
                <th>Title     </th>
                <th>Author    </th>
            </tr>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.Genre</td>
                    <td>@book.ISBN</td>
                    <td>@book.Title</td>
                    <td>@book.Author</td>

                </tr>
            }

        </table>

</div>
